{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", // 預設記錄 Information 等級以上
      "Override": {
        "Microsoft": "Warning", // Microsoft 系統訊息只記錄 Warning 以上 (避免太吵)
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File", // 寫入檔案
        "Args": {
          "path": "Logs/log-.txt", // 檔名格式：會自動變成 log-20231124.txt
          "rollingInterval": "Day", // 每天切一個新檔案
          "retainedFileCountLimit": 14, // 只保留最近 14 天的檔案 (自動刪除舊檔)
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "LineBotSettings": {
    "ChannelAccessToken": "YOUR_TOKEN_HERE",
    "ChannelSecret": "YOUR_TOKEN_HERE"
  },
  "IPSettings": {
    "CheckIP": "10.13.1.1;10.13.1.4;10.13.1.5;10.13.1.89;10.13.1.155;10.13.1.157;10.13.1.158;10.13.1.159;10.13.20.1;",
    "CheckPort": "22;443"
  },

  "AllowedHosts": "*"
}
